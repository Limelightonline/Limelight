<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceContainer name="main" htmlClass="column main layout_2"/>
    <move element="page.main.title" destination="product.info.price" after="product.info.stock.sku"/>
    <move element="product.info.review" destination="product.info.main" after="-"/>
    <move element="product.info.sku" destination="product.info.price" after="product.price.final"/>
    <move element="product.info.social" destination="product.info.addtocart.additional"/>
    <move element="product.info.overview" destination="product.info.form.options" before="-"/>
</page>